<header class="site-header contain-to-grid">
  <nav class="tab-bar hide-for-medium-up">
    <section class="left-small">
      <%= link_to content_tag(:span), nil, class: 'left-off-canvas-toggle menu-icon' %>
    </section>
    <section class="middle tab-bar-section">
      <h1 class="title"><span class="site-icon">Rapid Turtle</span></h1>
    </section>
  </nav>

  <aside class="left-off-canvas-menu">
    <ul class="off-canvas-list">
      <li>
        <%= link_to "#{content_tag :span, nil, class: 'fa fa-fw fa-home'} Home".html_safe, root_path %>
      </li>
      <li>
        <%= link_to "#{content_tag :span, nil, class: 'fa fa-fw fa-comment'} Contact Us".html_safe, contact_path %>
      </li>
    </ul>
  </aside>


  <nav class="top-bar show-for-medium-up">
    <ul class="title-area">
      <li class="name">
        <h1><%= link_to 'Rapid Turtle', root_path, class: 'site-icon' %></h1>
      </li>
      <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
    </ul>
    <section class="top-bar-section">
      <ul class="right">
        <li class="<%= 'active' if params[:controller] == 'static_pages' && params[:action] == 'contact' %>">
          <%= link_to 'Contact Us', contact_path %>
        </li>
      </ul>
    </section>
  </nav>
</header>
